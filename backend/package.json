{
  "name": "filesharingapp-backend",
  "version": "1.0.0",
  "description": "Backend for file sharing app with Prisma, PostgreSQL, JWT authentication",
  "main": "app.ts",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpileOnly src/app.ts",
    "build": "tsc -b",
    "start": "node dist/index.js",
    "migrate": "npx prisma migrate dev",
    "seed": "npx prisma db seed",
    "db:generate": "cd backend/src/prisma/ && npx prisma generate --schema=src/prisma/schema.prisma && cd ../../..",
    "backend": "tsc -b && node dist/index.js"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.749.0",
    "@aws-sdk/s3-request-presigner": "^3.740.0",
    "@prisma/client": "^6.3.0",
    "@types/dotenv": "^6.1.1",
    "aws-sdk": "^2.1692.0",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "multer": "^1.4.5-lts.1",
    "multer-s3": "^3.0.1",
    "qrcode": "^1.5.4",
    "ts-node-dev": "^2.0.0",
    "uuid": "^11.0.5"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/multer": "^1.4.7",
    "@types/multer-s3": "^3.0.3",
    "@types/node": "^16.18.125",
    "@types/qrcode": "^1.5.5",
    "prisma": "^6.3.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  }
}
